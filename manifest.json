{
  // Required
  "manifest_version": 2,
  "name": "Download Media",
  "version": "1.0.0",

  // Recommended
  "default_locale": "en",
  "description": "Download media",
  "icons": {},

  // Pick one (or none)
  "browser_action": {
  	"default_popup": "popup.html",
  	"default_title": "Click Here"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources": [
    "style.css"
  ]
}